<?xml version="1.0" encoding="utf-8" ?>
<com.android.systemui.shared.clocks.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:layout_gravity="start|center_vertical">

	<LinearLayout
        android:gravity="start|center_vertical" 
        android:layout_gravity="start|center_vertical" 
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">

	<LinearLayout 
        android:gravity="start|center_vertical" 
        android:layout_gravity="start|center_vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" >

	<FrameLayout 
        android:gravity="start|center_vertical" 
        android:layout_gravity="start|center_vertical" 
        android:background="@drawable/dessert_donut" 
        android:layout_width="185.0dip" 
        android:layout_height="130.0dip">


    <TextClock 
        android:textSize="17.0sp"
        android:textStyle="bold" 
        android:textColor="#FF626262"   
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingStart="55.0dip" 
        android:layout_gravity="start|center"
        android:fontFamily="ProductSans"
        android:format12Hour="hh"
        android:format24Hour="kk"  />


    <TextClock 
        android:textSize="17.0sp"
        android:textStyle="bold" 
        android:textColor="#FF626262" 
        android:paddingEnd="63.0dip"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:layout_gravity="end|center"
        android:fontFamily="ProductSans"
        android:format12Hour="mm"
        android:format24Hour="mm" />


	<TextClock 
        android:textSize="7.0sp"  
        android:textColor="@android:color/system_accent1_10" 
        android:gravity="center|bottom" 
        android:layout_gravity="center|bottom"
        android:paddingBottom="32.0dip" 
        android:paddingEnd="9.0dip"  
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0" 
        android:textAllCaps="false" 
        android:fontFamily="ProductSansBold"
        android:format12Hour="a" 
        android:format24Hour="a" />

    <TextView 
        android:textSize="12.0sp" 
        android:textColor="@android:color/system_accent3_100"
        android:gravity="bottom|center" 
        android:layout_gravity="bottom|center" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_weight="1.0" 
        android:paddingEnd="4.0dip"
        android:paddingBottom="10.0dip" 
        android:shadowRadius="4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@android:color/system_accent3_300"
        android:text="━━━━━━━━━━━━ " />

    <TextClock 
        android:textSize="9.0sp"  
        android:textColor="@android:color/system_accent1_10" 
        android:gravity="bottom|center" 
        android:layout_gravity="bottom|center"
        android:paddingBottom="1.0dip" 
        android:paddingEnd="4.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0"
        android:letterSpacing="0.2" 
        android:textAllCaps="true"
        android:fontFamily="ProductSansBold"
        android:format12Hour="EEEE dd MMM " 
        android:format24Hour="EEEE dd MMM " />

    </FrameLayout>
    </LinearLayout>

    <TextView 
        android:textSize="12.0sp" 
        android:textColor="@android:color/system_accent3_100"
        android:paddingBottom="5.0dip" 
        android:paddingEnd="4.0dip"
        android:gravity="top|center" 
        android:layout_gravity="top|center" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_weight="1.0" 
        android:shadowRadius="4"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowColor="@android:color/system_accent3_300"
        android:text="━━━━━━━━━━━━ " />

</LinearLayout>
</com.android.systemui.shared.clocks.ClockLayout>
