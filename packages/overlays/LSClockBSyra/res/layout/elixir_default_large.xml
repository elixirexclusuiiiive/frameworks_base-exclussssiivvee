<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.shared.clocks.ClockLayout 
xmlns:androidprv="http://schemas.android.com/apk/prv/res/android" 
xmlns:android="http://schemas.android.com/apk/res/android" 
xmlns:app="http://schemas.android.com/apk/res-auto" 
xmlns:aapt="http://schemas.android.com/aapt" 
android:layout_gravity="center_vertical|center_horizontal" 
android:layout_width="match_parent" 
android:paddingBottom="130dp"
android:layout_height="match_parent">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:layout_gravity="center_vertical|center_horizontal">

   <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="hh mm"
		android:format24Hour="kk mm"
        android:textSize="110sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/system_accent1_500"/>

   <TextClock
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format12Hour="EEEE"
		android:format24Hour="EEEE"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/system_accent2_100"/>

   <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:format12Hour="dd MMMM yyyy"
		android:format24Hour="dd MMMM yyyy"
        android:layout_gravity="center"
        android:textColor="@android:color/system_accent2_100"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

  </FrameLayout>
</com.android.systemui.shared.clocks.ClockLayout>
