<?xml version="1.0" encoding="utf-8" ?>
<com.android.systemui.shared.clocks.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:layout_gravity="start|center_vertical">

	<LinearLayout
        android:gravity="center" 
        android:layout_gravity="center" 
        android:layout_centerInParent="true"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="top|end" 
        android:layout_gravity="top|end" 
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">


    <FrameLayout 
        android:gravity="top|end" 
        android:layout_gravity="top|end"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
	
    <TextView 
        android:textSize="12.0sp" 
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:gravity="top|end" 
        android:layout_gravity="top|end" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_weight="1.0" 
        android:text="Hello" 
        android:letterSpacing="0.2" />

    <LinearLayout
        android:gravity="top|center" 
        android:layout_gravity="top|center" 
        android:paddingEnd="30.0dip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
				
	<TextView 
        android:textSize="12.0sp" 
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:background="@drawable/mm_mouth2"
        android:gravity="top|center" 
        android:layout_gravity="top|center"
        android:paddingEnd="1.0dip"
        android:paddingStart="1.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:maxLength="1" 
        android:layout_weight="1.0"   
        android:text="Hello" 
        android:letterSpacing="0.2" />

	</LinearLayout>
    </FrameLayout>

    <TextView 
        android:textSize="12.0sp" 
        android:textColor="#ffffffff"
        android:layout_marginBottom="3dp"
        android:gravity="top|end" 
        android:layout_gravity="top|end" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_weight="1.0" 
        android:letterSpacing="0.1"
        android:text="Welcome back!" />

    <LinearLayout 
        android:gravity="center" 
        android:layout_gravity="center"
        android:orientation="horizontal" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">

    <FrameLayout 
        android:gravity="start" 
        android:layout_gravity="start"
        android:paddingEnd="3.0dip" 
        android:background="@drawable/mm_mouth1" 
        android:layout_width="60.0dip" 
        android:layout_height="60.0dip">

    <TextClock 
        android:textSize="20.0sp"
        android:textStyle="bold" 
        android:textColor="#ffffffff"   
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:format12Hour="hh"
        android:format24Hour="kk"  />

    </FrameLayout>

    <TextView 
        android:textSize="12.0sp"
        android:gravity="center" 
        android:layout_gravity="center" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_weight="1.0" 
        android:text="     " />

    <FrameLayout 
        android:gravity="end" 
        android:layout_gravity="end"
        android:paddingStart="3.0dip" 
        android:background="@drawable/mm_head" 
        android:layout_width="60.0dip" 
        android:layout_height="60.0dip">

    <TextClock 
        android:textSize="20.0sp"
        android:textStyle="bold" 
        android:textColor="#ffffffff"   
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:format12Hour="mm"
        android:format24Hour="mm"  />
	
</FrameLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>
</com.android.systemui.shared.clocks.ClockLayout>
