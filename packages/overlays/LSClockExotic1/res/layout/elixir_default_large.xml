<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.shared.clocks.ClockLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/_160sdp"
    android:layout_gravity="center_horizontal|center_vertical">
<FrameLayout
	android:layout_width="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
	android:layout_height="wrap_content">

    <LinearLayout
		android:gravity="center"
		android:layout_gravity="center"
        android:layout_marginTop="@dimen/_70sdp"	
		android:layout_width="wrap_content"	
		android:layout_height="wrap_content">
  
        <TextClock
			android:textSize="105.0sp"
			android:gravity="start"
            android:fontFamily="@font/evt"
			android:maxLines="1"
            android:layout_weight="0"   	
			android:textColor="#f3b2e8"	  
			android:layout_width="wrap_content"	 
			android:layout_height="wrap_content"
            android:format12Hour="hh"
            android:format24Hour="kk"/>
 
		<TextClock
			android:textSize="42.0sp"
			android:gravity="start"
			android:alpha="0.9"
			android:fontFamily="@font/evt"
			android:maxLines="1"
            android:layout_weight="0"			
			android:textColor="#ffffffff"	 
			android:layout_width="wrap_content"	
			android:layout_height="wrap_content"
            android:format12Hour=":"
            android:format24Hour=":"/>
      
      	<TextClock
			android:textSize="58.0sp"
			android:gravity="start"
			android:alpha="0.9"
			android:fontFamily="@font/evt"
			android:maxLines="1"                 
			android:textColor="#ffffffff"	  
			android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:format12Hour="mm"
            android:format24Hour="mm"/>
      
      	<TextClock
			android:textSize="20.0sp"			   
			android:gravity="bottom"
			android:alpha="0.7"
            android:layout_gravity="center" 
			android:fontFamily="@font/evt"
			android:maxLines="1"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="0"
	        android:textColor="#fff"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
            android:format12Hour="a"
            android:format24Hour="a"/>
      
    </LinearLayout>
       
    <ImageView
        android:layout_width="@dimen/_150sdp"
	    android:layout_height="@dimen/_240sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_minus5sdp"
        android:layout_marginBottom="@dimen/_10sdp"	
        android:scaleType="fitXY"
        android:alpha="0.7"
        android:background="@drawable/gen"/>
     
    <LinearLayout 
	    android:gravity="bottom|center" 
		android:layout_gravity="bottom|center" 
        android:orientation="horizontal"  
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"> 
  
        <TextClock  
            android:textSize="16.0sp" 
            android:fontFamily="evolvesans-bold"  
            android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
            android:textColor="#ffffff"  
            android:format12Hour="EEEE • dd MMM " 
            android:format24Hour="EEEE • dd MMM " /> 
  
    </LinearLayout>
</FrameLayout>
</com.android.systemui.shared.clocks.ClockLayout>
